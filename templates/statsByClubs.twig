<!-- DataTables CSS -->
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap4.min.css"/>

<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>

<!-- DataTables -->
<script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/datatables.net-bs4/3.2.2/dataTables.bootstrap4.min.js"></script>


   
    <title>Stats par clubs</title>
  </head>
  <body>
     {{ include('header.twig') }}
      <div class="row">
        <div class="col">

       {% for tournoi in ListeDesTournois %}
        {% if tournoi.id == idTournoi %}
        <a href="statsByClubs.php?id_tournoi={{ tournoi.id }}" class="btn btn-success btn-lg">{{ tournoi.nom }}</a>
        {% else %}
        <a href="statsByClubs.php?id_tournoi={{ tournoi.id }}" class="btn btn-secondary">{{ tournoi.nom }} </a>
        {% endif %}
      {% endfor %}

        </div>
      <div class="row">
        <div class="col-lg-6">
        <table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Rang</th>
            <th>Nom du Club</th>
            <th>Buts Marqués</th>
            <th>Victoires</th>
            <th>Buts Encaissés</th>
        </tr>
    </thead>
    <tbody>
        {% for club in statTournoi %}
            <tr>
                <td>{{ loop.index }}</td> <!-- Utilisation de loop.index pour le rang -->
                 <td>{{ club.ClubNom }}</td>
                <td>{{ club.ButsMarques }}</td>
                <td>{{ club.Victoires }}</td>
                <td>{{ club.ButsEncaisses }}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
<script>
    $(document).ready(function() {
       $('#example').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/French.json"
            }
        });
    });
</script>




        </div>
      </div>
